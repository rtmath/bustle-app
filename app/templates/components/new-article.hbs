{{yield}}
<h1>New Article</h1>
<div>
  <form>
    <div class="form-group">
      <label for="author">Author name</label>
      {{input value=author id="author" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="title">Title</label>
      {{input value=title id="title" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="body">Body text</label>
      {{input value=body id="body" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="image">Image URL</label>
      {{input value=image id="image" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="source">Image source</label>
      {{input value=source id="source" class="form-control"}}
    </div>

    <div class="form-group">
      <label for="timestamp">Time</label>
      {{input value=timestamp id="timestamp" class="form-control"}}
    </div>

    <button  class="btn btn-info"{{action 'saveArticle'}}>Save</button>
  </form>
</div>
<div class="btn btn-info"> {{#link-to 'index'}}Home{{/link-to}}</div>
